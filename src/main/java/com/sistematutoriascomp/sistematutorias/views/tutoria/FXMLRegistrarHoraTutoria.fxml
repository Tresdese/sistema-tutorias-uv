<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="520.0" prefWidth="820.0" style="-fx-background-color: linear-gradient(to bottom right, #F2F2F2, #E6E6E6);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sistematutoriascomp.sistematutorias.controller.tutoria.FXMLRegistrarHoraTutoriaController">

    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <!-- HEADER -->
            <top>
                <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="12.0" style="-fx-background-color: #18529d; -fx-padding: 0 20 0 20;">
                    <children>
                        <Button onAction="#clicVolver" style="-fx-background-color: rgba(255,255,255,0.15);                                        -fx-text-fill: white;                                        -fx-background-radius: 8;                                        -fx-padding: 6 16;                                        -fx-cursor: hand;" text="Volver">
                            <font>
                                <Font name="Segoe UI Semibold" size="14.0" />
                            </font>
                        </Button>

                        <Region HBox.hgrow="ALWAYS" />

                        <Label text="Registrar horario de tutoría" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI Bold" size="22.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </top>

            <!-- CONTENIDO -->
            <center>
                <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 28;">
                    <children>

                        <Label maxWidth="600.0" text="Seleccione la sesión y la hora en la que impartirá la tutoría." textFill="#666666" wrapText="true">
                            <font>
                                <Font name="Segoe UI" size="15.0" />
                            </font>
                        </Label>

                        <VBox maxWidth="480.0" spacing="16.0" style="-fx-background-color: white;                                      -fx-background-radius: 14;                                      -fx-padding: 22;">
                            <effect>
                                <DropShadow offsetY="2.0" radius="16.0">
                                    <color>
                                        <Color blue="0.0" green="0.0" opacity="0.18" red="0.0" />
                                    </color>
                                </DropShadow>
                            </effect>
                            <children>

                                <!-- Fecha de sesión -->
                                <Label text="Fecha de la sesión de tutoría">
                                    <font>
                                        <Font name="Segoe UI Semibold" size="14.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="cbFechas" prefWidth="320.0" promptText="Seleccione una fecha disponible" />

                                <Label fx:id="lbErrorFecha" managed="false" textFill="RED" visible="false">
                                    <font>
                                        <Font name="Segoe UI" size="11.0" />
                                    </font>
                                </Label>

                                <!-- Hora de inicio -->
                                <Label text="Hora de inicio">
                                    <font>
                                        <Font name="Segoe UI Semibold" size="14.0" />
                                    </font>
                                </Label>

                                <HBox alignment="CENTER_LEFT" spacing="12.0">
                                    <children>
                                        <Spinner fx:id="spHora" prefWidth="90.0" />
                                        <Label text=":" />
                                        <Spinner fx:id="spMinuto" prefWidth="90.0" />
                                    </children>
                                </HBox>

                                <Label fx:id="lbErrorHora" managed="false" textFill="RED" visible="false">
                                    <font>
                                        <Font name="Segoe UI" size="11.0" />
                                    </font>
                                </Label>

                                <!-- Botones -->
                                <HBox alignment="CENTER_RIGHT" spacing="12.0" style="-fx-padding: 16 0 0 0;">
                                    <children>
                                        <Button onAction="#clicCancelar" style="-fx-background-color: #cccccc;                                                        -fx-text-fill: #333333;                                                        -fx-background-radius: 8;                                                        -fx-padding: 6 18;" text="Reiniciar">
                                            <font>
                                                <Font name="Segoe UI" size="13.0" />
                                            </font>
                                        </Button>

                                        <Button onAction="#clicRegistrar" style="-fx-background-color: #18529d;                                                        -fx-text-fill: white;                                                        -fx-background-radius: 8;                                                        -fx-padding: 6 20;                                                        -fx-cursor: hand;" text="Registrar">
                                            <font>
                                                <Font name="Segoe UI Semibold" size="15.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>

                            </children>
                        </VBox>

                    </children>
                </VBox>
            </center>

        </BorderPane>
    </children>
</AnchorPane>
