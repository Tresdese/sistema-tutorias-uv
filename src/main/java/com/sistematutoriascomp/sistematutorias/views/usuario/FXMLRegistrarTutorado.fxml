<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane prefHeight="520.0" prefWidth="820.0"
            style="-fx-background-color: linear-gradient(to bottom right, #F2F2F2, #E6E6E6);"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sistematutoriascomp.sistematutorias.controller.usuario.FXMLRegistrarTutoradoController">

    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">

            <!-- HEADER -->
            <top>
                <HBox alignment="CENTER_LEFT"
                      prefHeight="80.0"
                      spacing="12.0"
                      style="-fx-background-color: #18529d; -fx-padding: 0 20 0 20;">
                    <children>
                        <Label text="Sistema de Tutorías"
                               textFill="WHITE"
                               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

                        <Region HBox.hgrow="ALWAYS"/>

                        <Button fx:id="btnVolver"
                                text="Volver"
                                onAction="#onVolver"
                                style="-fx-background-color: rgba(255,255,255,0.15);
                                       -fx-text-fill: white;
                                       -fx-background-radius: 8;
                                       -fx-padding: 8 16;
                                       -fx-cursor: hand;
                                       -fx-font-size: 13;"/>
                    </children>
                </HBox>
            </top>

            <!-- CONTENIDO -->
            <center>
                <VBox alignment="TOP_LEFT"
                      spacing="20.0"
                      style="-fx-padding: 24;">
                    <children>

                        <VBox spacing="16.0"
                              style="-fx-background-color: white;
                                     -fx-background-radius: 12;
                                     -fx-padding: 18;">
                            <children>

                                <Label text="Registro de tutorado"
                                       textFill="#18529d"
                                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                                <Label text="Capture los datos del tutorado para registrarlo en el sistema."
                                       textFill="#666666"
                                       style="-fx-font-size: 13px;"/>

                                <!-- Matrícula -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Matrícula:"
                                               style="-fx-font-size: 14px;"/>
                                        <TextField fx:id="txtMatricula"
                                                   prefWidth="300.0"
                                                   promptText="Ej. S12345678"
                                                   style="-fx-font-size: 13px;"/>
                                    </children>
                                </HBox>

                                <!-- Apellido paterno -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Apellido paterno:"
                                               style="-fx-font-size: 14px;"/>
                                        <TextField fx:id="txtApellidoPaterno"
                                                   prefWidth="300.0"
                                                   promptText="Ej. Hernández"
                                                   style="-fx-font-size: 13px;"/>
                                    </children>
                                </HBox>

                                <!-- Apellido materno -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Apellido materno:"
                                               style="-fx-font-size: 14px;"/>
                                        <TextField fx:id="txtApellidoMaterno"
                                                   prefWidth="300.0"
                                                   promptText="Ej. García"
                                                   style="-fx-font-size: 13px;"/>
                                    </children>
                                </HBox>

                                <!-- Nombre(s) -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Nombre(s):"
                                               style="-fx-font-size: 14px;"/>
                                        <TextField fx:id="txtNombres"
                                                   prefWidth="300.0"
                                                   promptText="Ej. Juan Carlos"
                                                   style="-fx-font-size: 13px;"/>
                                    </children>
                                </HBox>

                                <!-- Correo -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Correo:"
                                               style="-fx-font-size: 14px;"/>
                                        <TextField fx:id="txtCorreo"
                                                   prefWidth="300.0"
                                                   promptText="Ej. alumno@uv.mx"
                                                   style="-fx-font-size: 13px;"/>
                                    </children>
                                </HBox>

                                <!-- Contraseña -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Contraseña:"
                                               style="-fx-font-size: 14px;"/>
                                        <PasswordField fx:id="txtPassword"
                                                       prefWidth="300.0"
                                                       promptText="Contraseña de acceso"
                                                       style="-fx-font-size: 13px;"/>
                                    </children>
                                </HBox>

                                <!-- Programa educativo -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Programa educativo:"
                                               style="-fx-font-size: 14px;"/>
                                        <ComboBox fx:id="cbProgramaEducativo"
                                                  prefWidth="300.0"
                                                  promptText="Seleccione un programa"
                                                  style="-fx-font-size: 13px;"/>
                                    </children>
                                </HBox>

                                <!-- Semestre (TextField) -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Semestre:"
                                               style="-fx-font-size: 14px;"/>
                                        <TextField fx:id="txtSemestre"
                                                   prefWidth="300.0"
                                                   promptText="Ej. 1, 2, 3..."
                                                   style="-fx-font-size: 13px;"/>
                                    </children>
                                </HBox>

                                <!-- Tutor asignado -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Tutor asignado:"
                                               style="-fx-font-size: 14px;"/>
                                        <ComboBox fx:id="cbTutor"
                                                  prefWidth="300.0"
                                                  promptText="Seleccione un tutor"
                                                  style="-fx-font-size: 13px;"/>
                                    </children>
                                </HBox>

                                <!-- BOTONES -->
                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnCancelar"
                                                text="Cancelar"
                                                cancelButton="true"
                                                onAction="#onCancelar"
                                                style="-fx-background-color: transparent;
                                                       -fx-border-color: #b0bec5;
                                                       -fx-border-radius: 8;
                                                       -fx-text-fill: #546e7a;
                                                       -fx-padding: 6 16;
                                                       -fx-cursor: hand;
                                                       -fx-font-size: 13;"/>
                                        <Button fx:id="btnGuardar"
                                                text="Guardar"
                                                defaultButton="true"
                                                onAction="#onGuardar"
                                                style="-fx-background-color: #18529d;
                                                       -fx-text-fill: white;
                                                       -fx-background-radius: 8;
                                                       -fx-padding: 6 20;
                                                       -fx-cursor: hand;
                                                       -fx-font-size: 13;"/>
                                    </children>
                                </HBox>

                            </children>
                        </VBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
