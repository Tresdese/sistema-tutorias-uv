<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>

<AnchorPane prefHeight="520.0" prefWidth="820.0"
                     style="-fx-background-color: linear-gradient(to bottom right, #F2F2F2, #E6E6E6);"
                     xmlns="http://javafx.com/javafx/8"
                     xmlns:fx="http://javafx.com/fxml/1"
                     fx:controller="sistematutorias.controlador.usuario.FXMLRegistrarTutoradoController">

  <BorderPane AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0"
                       AnchorPane.topAnchor="0.0">

       <top>
         <HBox alignment="CENTER_LEFT"
                     prefHeight="80.0"
                     spacing="12.0"
                     style="-fx-background-color: #18529d; -fx-padding: 0 20 0 20;">
              <Label text="Sistema de Tutorías" textFill="WHITE"
                        style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
              <Region HBox.hgrow="ALWAYS" />
              <Button text="Cerrar sesión"
                            style="-fx-background-color: rgba(255,255,255,0.15);
                                      -fx-text-fill: white;
                                      -fx-background-radius: 8;
                                      -fx-padding: 8 16;
                                      -fx-cursor: hand;
                                      -fx-font-size: 13;"/>
         </HBox>
       </top>

       <center>
         <VBox alignment="TOP_LEFT"
                     spacing="20.0"
                     style="-fx-padding: 24;">

              <VBox spacing="16.0"
                       style="-fx-background-color: white;
                                    -fx-background-radius: 12;
                                    -fx-padding: 18;">

                <Label text="Registro de tutorado"
                             textFill="#18529d"
                             style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                <Label text="Capture los datos del tutorado para registrarlo en el sistema."
                             textFill="#666666"
                             style="-fx-font-size: 13px;"/>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <Label text="Matrícula:"
                               style="-fx-font-size: 14px;"/>
                     <TextField fx:id="txtMatricula"
                                      promptText="Ej. S12345678"
                                      prefWidth="300.0"
                                      style="-fx-font-size: 13px;"/>
                </HBox>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <Label text="Apellido paterno:"
                               style="-fx-font-size: 14px;"/>
                     <TextField fx:id="txtApellidoPaterno"
                                      promptText="Ej. Hernández"
                                      prefWidth="300.0"
                                      style="-fx-font-size: 13px;"/>
                </HBox>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <Label text="Apellido materno:"
                               style="-fx-font-size: 14px;"/>
                     <TextField fx:id="txtApellidoMaterno"
                                      promptText="Ej. García"
                                      prefWidth="300.0"
                                      style="-fx-font-size: 13px;"/>
                </HBox>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <Label text="Nombre(s):"
                               style="-fx-font-size: 14px;"/>
                     <TextField fx:id="txtNombres"
                                      promptText="Ej. Juan Carlos"
                                      prefWidth="300.0"
                                      style="-fx-font-size: 13px;"/>
                </HBox>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <Label text="Programa educativo:"
                               style="-fx-font-size: 14px;"/>
                     <ComboBox fx:id="cbProgramaEducativo"
                                     promptText="Seleccione un programa"
                                     prefWidth="300.0"
                                     style="-fx-font-size: 13px;"/>
                </HBox>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <Label text="Periodo de ingreso:"
                               style="-fx-font-size: 14px;"/>
                     <ComboBox fx:id="cbPeriodoIngreso"
                                     promptText="Ej. Febrero 2024 - Julio 2024"
                                     prefWidth="300.0"
                                     style="-fx-font-size: 13px;"/>
                </HBox>

                <HBox alignment="CENTER_RIGHT"
                            spacing="10.0">
                     <Button fx:id="btnCancelar"
                                   text="Cancelar"
                                   cancelButton="true"
                                   onAction="#onCancelar"
                                   style="-fx-background-color: transparent;
                                             -fx-border-color: #b0bec5;
                                             -fx-border-radius: 8;
                                             -fx-text-fill: #546e7a;
                                             -fx-padding: 6 16;
                                             -fx-cursor: hand;
                                             -fx-font-size: 13;"/>

                     <Button fx:id="btnGuardar"
                                   text="Guardar"
                                   defaultButton="true"
                                   onAction="#onGuardar"
                                   style="-fx-background-color: #18529d;
                                             -fx-text-fill: white;
                                             -fx-background-radius: 8;
                                             -fx-padding: 6 20;
                                             -fx-cursor: hand;
                                             -fx-font-size: 13;"/>
                </HBox>
              </VBox>
         </VBox>
       </center>
  </BorderPane>
</AnchorPane>
