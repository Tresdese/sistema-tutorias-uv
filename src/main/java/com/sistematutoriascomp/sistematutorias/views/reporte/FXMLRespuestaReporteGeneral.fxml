<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane"
            prefHeight="520.0"
            prefWidth="820.0"
            style="-fx-background-color: linear-gradient(to bottom right, #F2F2F2, #E6E6E6);"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sistematutoriascomp.sistematutorias.controller.reporte.FXMLRespuestaReporteGeneralController">

    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">

            <!-- HEADER -->
            <top>
                <HBox alignment="CENTER_LEFT"
                      prefHeight="70.0"
                      spacing="12.0"
                      style="-fx-background-color: #18529d; -fx-padding: 0 20 0 20;">
                    <children>
                        <Label text="Sistema de Tutorías"
                               textFill="WHITE"
                               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

                        <Region HBox.hgrow="ALWAYS"/>

                        <Button fx:id="btnVolver"
                                text="Volver"
                                onAction="#onVolver"
                                style="-fx-background-color: rgba(255,255,255,0.15);
                                       -fx-text-fill: white;
                                       -fx-background-radius: 8;
                                       -fx-padding: 8 16;
                                       -fx-cursor: hand;
                                       -fx-font-size: 13;"/>
                    </children>
                </HBox>
            </top>

            <!-- CONTENIDO CENTRAL -->
            <center>
                <VBox alignment="TOP_LEFT"
                      spacing="20.0"
                      style="-fx-padding: 24;">
                    <children>

                        <!-- Tarjeta blanca -->
                        <VBox spacing="16.0"
                              style="-fx-background-color: white;
                                     -fx-background-radius: 12;
                                     -fx-padding: 18;">
                            <children>

                                <!-- Título -->
                                <Label text="Respuesta a reporte general"
                                       textFill="#18529d"
                                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                                <Label text="Capture el estado del reporte y observaciones adicionales."
                                       textFill="#666666"
                                       style="-fx-font-size: 13px;"/>

                                <!-- Campo: Estado -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Estado:"
                                               style="-fx-font-size: 14px;"/>
                                        <ComboBox fx:id="cbEstado"
                                                  prefWidth="260.0"
                                                  promptText="Seleccione el estado"
                                                  style="-fx-font-size: 13px;"/>
                                    </children>
                                </HBox>

                                <!-- Campo: Observaciones extra -->
                                <Label text="Observaciones extra:"
                                       style="-fx-font-size: 14px;"/>
                                <TextArea fx:id="txtObservacionesExtra"
                                          prefRowCount="6"
                                          prefWidth="600.0"
                                          wrapText="true"
                                          promptText="Anote comentarios adicionales, aclaraciones o indicaciones para el reporte..."
                                          style="-fx-font-size: 13px;"/>

                                <!-- BOTONES -->
                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnCancelar"
                                                text="Cancelar"
                                                cancelButton="true"
                                                onAction="#onCancelar"
                                                style="-fx-background-color: transparent;
                                                       -fx-border-color: #b0bec5;
                                                       -fx-border-radius: 8;
                                                       -fx-text-fill: #546e7a;
                                                       -fx-padding: 6 16;
                                                       -fx-cursor: hand;
                                                       -fx-font-size: 13;"/>

                                        <Button fx:id="btnGuardar"
                                                text="Guardar"
                                                defaultButton="true"
                                                onAction="#onGuardar"
                                                style="-fx-background-color: #18529d;
                                                       -fx-text-fill: white;
                                                       -fx-background-radius: 8;
                                                       -fx-padding: 6 20;
                                                       -fx-cursor: hand;
                                                       -fx-font-size: 13;"/>
                                    </children>
                                </HBox>

                            </children>
                        </VBox>

                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
