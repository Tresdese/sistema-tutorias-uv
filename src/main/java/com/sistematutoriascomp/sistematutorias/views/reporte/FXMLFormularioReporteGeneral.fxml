<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom right, #F2F2F2, #E6E6E6);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sistematutoriascomp.sistematutorias.controller.reporte.FXMLFormularioReporteGeneralController">

    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <!-- HEADER -->
            <top>
                <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="12.0" style="-fx-background-color: #18529d; -fx-padding: 0 20 0 20;">
                    <children>
                        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Sistema de Tutorías" textFill="WHITE" />

                        <Region HBox.hgrow="ALWAYS" />

                           <Button fx:id="btnResponder" onAction="#onResponder" style="-fx-background-color: rgba(255,255,255,0.15);                                     -fx-text-fill: white;                                     -fx-background-radius: 8;                                     -fx-padding: 8 16;                                     -fx-cursor: hand;                                     -fx-font-size: 13;" text="Responder" />

                        <Button fx:id="btnVolver" onAction="#onVolver" style="-fx-background-color: rgba(255,255,255,0.15);                                        -fx-text-fill: white;                                        -fx-background-radius: 8;                                        -fx-padding: 8 16;                                        -fx-cursor: hand;                                        -fx-font-size: 13;" text="Volver" />
                    </children>
                </HBox>
            </top>

            <!-- CONTENIDO CENTRAL CON SCROLL -->
            <center>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-padding: 16 24 16 24;" vbarPolicy="AS_NEEDED">
                    <content>
                        <VBox alignment="TOP_LEFT" spacing="16.0">
                            <children>

                                <!-- Tarjeta blanca -->
                                <VBox spacing="14.0" style="-fx-background-color: white;                                              -fx-background-radius: 12;                                              -fx-padding: 18;">
                                    <children>

                                        <!-- Título -->
                                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Administrar reporte general" textFill="#18529d" />

                                        <Label style="-fx-font-size: 13px;" text="Revise y capture los datos generales del reporte de tutorías." textFill="#666666" />

                                        <!-- ID reporte / Fecha / Estado en una sección compacta -->
                                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                                            <children>

                                                <VBox spacing="6.0">
                                                    <children>
                                                        <Label style="-fx-font-size: 14px;" text="ID reporte:" />
                                                        <TextField fx:id="txtIdReporteGeneral" editable="false" prefWidth="140.0" promptText="Autogenerado" style="-fx-font-size: 13px;" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="6.0">
                                                    <children>
                                                        <Label style="-fx-font-size: 14px;" text="Fecha de generación:" />
                                                        <TextField fx:id="txtFechaGeneracion" editable="false" prefWidth="200.0" promptText="Automática" style="-fx-font-size: 13px;" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="6.0">
                                                    <children>
                                                        <Label style="-fx-font-size: 14px;" text="Estado:" />
                                                        <ComboBox fx:id="cbEstado" prefWidth="200.0" promptText="Seleccione el estado" style="-fx-font-size: 13px;" />
                                                    </children>
                                                </VBox>

                                            </children>
                                        </HBox>

                                        <!-- Periodo y Coordinador -->
                                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                                            <children>

                                                <VBox spacing="6.0">
                                                    <children>
                                                        <Label style="-fx-font-size: 14px;" text="Periodo:" />
                                                        <ComboBox fx:id="cbPeriodo" prefWidth="260.0" promptText="Seleccione un periodo" style="-fx-font-size: 13px;" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="6.0">
                                                    <children>
                                                        <Label style="-fx-font-size: 14px;" text="Coordinador:" />
                                                        <ComboBox fx:id="cbCoordinador" prefWidth="260.0" promptText="Seleccione un coordinador" style="-fx-font-size: 13px;" />
                                                    </children>
                                                </VBox>

                                            </children>
                                        </HBox>

                                        <!-- Separador visual -->
                                        <Separator />

                                        <!-- Sección: Totales -->
                                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Totales y estadísticas" textFill="#18529d" />

                                        <!-- Totales fila 1 -->
                                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                                            <children>

                                                <VBox spacing="6.0">
                                                    <children>
                                                        <Label style="-fx-font-size: 14px;" text="Total de tutorados:" />
                                                        <TextField fx:id="txtTotalTutorados" prefWidth="160.0" promptText="0" style="-fx-font-size: 13px;" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="6.0">
                                                    <children>
                                                        <Label style="-fx-font-size: 14px;" text="Estudiantes en riesgo:" />
                                                        <TextField fx:id="txtTotalEstudiantesRiesgo" prefWidth="160.0" promptText="0" style="-fx-font-size: 13px;" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="6.0">
                                                    <children>
                                                        <Label style="-fx-font-size: 14px;" text="Total de tutores:" />
                                                        <TextField fx:id="txtTotalTutores" prefWidth="160.0" promptText="0" style="-fx-font-size: 13px;" />
                                                    </children>
                                                </VBox>

                                            </children>
                                        </HBox>

                                        <!-- Totales fila 2 -->
                                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                                            <children>

                                                <VBox spacing="6.0">
                                                    <children>
                                                        <Label style="-fx-font-size: 14px;" text="Porcentaje de asistencia (%):" />
                                                        <TextField fx:id="txtPorcentajeAsistencia" prefWidth="160.0" promptText="Ej. 85.50" style="-fx-font-size: 13px;" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="6.0">
                                                    <children>
                                                        <Label style="-fx-font-size: 14px;" text="Total de problemáticas:" />
                                                        <TextField fx:id="txtTotalProblematicas" prefWidth="160.0" promptText="0" style="-fx-font-size: 13px;" />
                                                    </children>
                                                </VBox>

                                            </children>
                                        </HBox>

                                        <!-- BOTONES -->
                                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                            <children>
                                                <Button fx:id="btnCancelar" cancelButton="true" onAction="#onCancelar" style="-fx-background-color: transparent;                                                                -fx-border-color: #b0bec5;                                                                -fx-border-radius: 8;                                                                -fx-text-fill: #546e7a;                                                                -fx-padding: 6 16;                                                                -fx-cursor: hand;                                                                -fx-font-size: 13;" text="Cancelar" />

                                            <Button fx:id="btnEditar" managed="false" onAction="#onEditar" style="-fx-background-color: #ffffff;                                                        -fx-border-color: #18529d;                                                        -fx-border-radius: 8;                                                        -fx-text-fill: #18529d;                                                        -fx-padding: 6 16;                                                        -fx-cursor: hand;                                                        -fx-font-size: 13;" text="Editar" visible="false" />

                                                <Button fx:id="btnGuardar" defaultButton="true" onAction="#onGuardar" style="-fx-background-color: #18529d;                                                                -fx-text-fill: white;                                                                -fx-background-radius: 8;                                                                -fx-padding: 6 20;                                                                -fx-cursor: hand;                                                                -fx-font-size: 13;" text="Guardar" />
                                            </children>
                                        </HBox>

                                    </children>
                                </VBox>

                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
