<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="550.0" prefWidth="850.0" style="-fx-background-color: linear-gradient(to bottom right, #F2F2F2, #E6E6E6);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sistematutoriascomp.sistematutorias.controller.reporte.FXMLGenerarReporteTutoriaController">

    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <top>
                <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="12.0" style="-fx-background-color: #18529d; -fx-padding: 0 20 0 20;">
                    <children>
                        <Button onAction="#clicVolver" style="-fx-background-color: rgba(255,255,255,0.15); -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 16; -fx-cursor: hand;" text="Cancelar">
                            <font>
                                <Font name="Segoe UI Semibold" size="14.0" />
                            </font>
                        </Button>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="Generar Reporte de Tutoría" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI Bold" size="22.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </top>

            <center>
                <VBox alignment="TOP_CENTER" prefHeight="470.0" prefWidth="902.0" spacing="18.0" style="-fx-padding: 24;">
                    <children>
                        <Label maxWidth="825.0" prefHeight="23.0" prefWidth="802.0" text="El sistema calculará automáticamente los totales basados en la asistencia y problemáticas registradas" textFill="#666666" wrapText="true">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </Label>

                        <VBox maxWidth="800.0" spacing="18.0" style="-fx-background-color: white; -fx-background-radius: 14; -fx-padding: 22;">
                            <effect>
                                <DropShadow offsetY="2.0" radius="16.0">
                                    <color>
                                        <Color opacity="0.18" />
                                    </color>
                                </DropShadow>
                            </effect>
                            <children>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label text="Sesión:">
                                            <font>
                                                <Font name="Segoe UI Semibold" size="14.0" />
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="cbSesiones" prefWidth="350.0" promptText="Seleccione una sesión pendiente" />
                                    </children>
                                </HBox>

                                <Separator />

                                <GridPane hgap="30.0" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Total Tutorados" textFill="#555555">
                                            <font><Font name="Segoe UI" size="12.0" /></font>
                                        </Label>
                                        <Label fx:id="lbTotalTutorados" text="0" textFill="#18529d" GridPane.rowIndex="1">
                                            <font><Font name="Segoe UI Bold" size="24.0" /></font>
                                        </Label>

                                        <Label text="Asistentes" textFill="#555555" GridPane.columnIndex="1">
                                            <font><Font name="Segoe UI" size="12.0" /></font>
                                        </Label>
                                        <Label fx:id="lbTotalAsistentes" text="0" textFill="#2e7d32" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <font><Font name="Segoe UI Bold" size="24.0" /></font>
                                        </Label>

                                        <Label text="Inasistentes" textFill="#555555" GridPane.columnIndex="2">
                                            <font><Font name="Segoe UI" size="12.0" /></font>
                                        </Label>
                                        <Label fx:id="lbTotalInasistentes" text="0" textFill="#c62828" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                            <font><Font name="Segoe UI Bold" size="24.0" /></font>
                                        </Label>

                                        <Label text="Problemáticas" textFill="#555555" GridPane.columnIndex="3">
                                            <font><Font name="Segoe UI" size="12.0" /></font>
                                        </Label>
                                        <Label fx:id="lbTotalProblematicas" text="0" textFill="#6a1b9a" GridPane.columnIndex="3" GridPane.rowIndex="1">
                                            <font><Font name="Segoe UI Bold" size="24.0" /></font>
                                        </Label>
                                    </children>
                                </GridPane>

                                <Separator />

                                <VBox spacing="8.0">
                                    <children>
                                        <Label text="Observaciones Generales:">
                                            <font>
                                                <Font name="Segoe UI Semibold" size="14.0" />
                                            </font>
                                        </Label>
                                        <TextArea fx:id="taObservaciones" prefHeight="100.0" prefWidth="200.0" promptText="Escriba aquí los comentarios generales sobre la sesión" style="-fx-background-radius: 5; -fx-border-color: #bdbdbd; -fx-border-radius: 5;" wrapText="true" />
                                    </children>
                                </VBox>

                                <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 10 0 0 0;">
                                    <children>
                                        <Button fx:id="btnGenerar" onAction="#clicGenerar" style="-fx-background-color: #18529d; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 25; -fx-cursor: hand;" text="Generar Reporte">
                                            <font>
                                                <Font name="Segoe UI Semibold" size="14.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>

                            </children>
                        </VBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
